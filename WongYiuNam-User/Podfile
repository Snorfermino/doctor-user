post_install do |installer|
    swift3Pods = ["ObjectMapper", "RxSwift", "RxCocoa", "PopupDialog", "SlideMenuControllerSwift", "SwiftyButton", "SJSegmentedScrollView"]
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |configuration|
            # these libs work now only with Swift3.2 in Xcode9
            if swift3Pods.include? target.name
                configuration.build_settings['SWIFT_VERSION'] = "3.2"
            end
        end
    end
end
