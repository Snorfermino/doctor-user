platform :ios, '9.0'
use_frameworks!

target 'WongYiuNam-User' do
    pod 'SDWebImage'
    pod 'SlideMenuControllerSwift'
    pod 'RxSwift'
    pod 'RxCocoa'
    pod 'LTHRadioButton'
    pod 'Moya-ObjectMapper'
    pod 'DRPLoadingSpinner'
    pod 'FacebookCore'
    pod 'FacebookLogin'
    pod 'UILoadControl'
    pod 'PopupDialog'
    pod 'KRProgressHUD'
end

post_install do |installer|
    swift3Pods = ["FacebookCore", "FacebookLogin", "ObjectMapper", "RxSwift", "RxCocoa", "PopupDialog", "SlideMenuControllerSwift", "SwiftyButton"]    
    installer.pods_project.targets.each do |target|
        target.build_configurations.each do |configuration|
            # these libs work now only with Swift3.2 in Xcode9
            if swift3Pods.include? target.name
                configuration.build_settings['SWIFT_VERSION'] = "3.2"
            end
        end
    end
end
